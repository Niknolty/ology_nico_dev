{% for post in posts %}
    {% if post.isProfessional %}
        {% include 'OlogySocialBundle:FrontEnd:pro_post_card.html.twig' with {'post': post } %}
    {% else %}
        {% include 'OlogySocialBundle:FrontEnd:post_card.html.twig' with {'post': post } %}
    {% endif %}     
{% endfor %}

{% if scroll %}
    <div>
        {% if page == 'ology' %}
            <a href="{{ path('_website_ology_pag', {'offset' : nextPage, 'n' : n, 'id' : ologyId, 'slug' : slug}) }}" class="navigation" >NEXT</a>
        {% elseif page == 'home' %}
            <a href="{{ path('_website_home_pag', {'offset' : nextPage, 'n' : n}) }}" class="navigation" >NEXT</a>
        {% elseif page == 'stash' %}
            <a href="{{ path('_website_stash_pag', {'offset' : nextPage, 'n' : n}) }}" class="navigation" >NEXT</a>
        {% endif %}
    </div>
{% endif %}
