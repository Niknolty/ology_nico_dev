{% extends 'OlogySocialBundle:Stats:base.html.twig' %}
{% block body %}
<h1>All Users</h1>

<table>
    <tr>
        <td>id</td>
        <td>firstname</td>
        <td>lastname</td>
        <td>email</td>
        <td>nb posts</td>
        <td>nb comments</td>
        <td>creation date</td>
        <td>last login</td>
        <td>notif new member</td>
        <td>notif new post</td>
        <td>notif new com own post</td>
        <td>notif new com other post</td>
    </tr>
{% for id, value in stats %}
    <tr>
        <td><a href="{{ path("_website_profile", {'id' : id}) }}">{{id}}</a></td>
        <td>{{ value['first_name'] }}</td>
        <td>{{ value['last_name'] }}</td>
        <td>{{ value['email'] }}</td>
        <td>{{ value['nb_posts'] }}</td>
        <td>{{ value['nb_comments'] }}</td>
        <td>{{ value['create_date']|date("Y-m-d") }}</td>
        <td>{{ value['last_login'] }}</td>
        <td>{{ value['mail_new_member'] }}</td>
        <td>{{ value['mail_new_post'] }}</td>
        <td>{{ value['last_login'] }}</td>
        <td>{{ value['mail_new_com_own_post'] }}</td>
        <td>{{ value['mail_new_com_oth_post'] }}</td>
    </tr>
{% endfor %}
</table>


{% endblock %}